<?xml version="1.0"?>
<block>
  <name>zmq_envsim_source</name>
  <key>envsim_zmq_envsim_source</key>
  <category>[envsim]</category>
  <import>import envsim</import>
  <make>envsim.zmq_envsim_source($address,
                                 $timeout,
                                 $hwm,
                                 $sample_rate,
                                 $start_time_int_s,
                                 $start_time_frac_s)
  </make>
  <param>
    <name>Address</name>
    <key>address</key>
    <type>string</type>
  </param>
  <param>
    <name>Timeout (msec)</name>
    <key>timeout</key>
    <value>100</value>
    <type>float</type>
  </param>
  <param>
    <name>High Watermark</name>
    <key>hwm</key>
    <value>-1</value>
    <type>int</type>
  </param>
  <param>
    <name>Sample Rate</name>
    <key>sample_rate</key>
    <value>samp_rate</value>
    <type>float</type>
  </param>
  <param>
    <name>Start time int seconds</name>
    <key>start_time_int_s</key>
    <type>int</type>
  </param>
  <param>
    <name>Start time frac seconds</name>
    <key>start_time_frac_s</key>
    <type>float</type>
  </param>
  <source>
    <name>out</name>
    <type>complex</type>
  </source>
</block>
